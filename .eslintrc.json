{
    "parser": "typescript-eslint-parser",
    "extends": [
        "standard"
    ],
    "plugins": [
        "typescript",
        "standard",
        "promise"
    ],
    "env": {
        "jest": true,
        "es6": true,
        "shared-node-browser": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "space-infix-ops": 0,
        "space-before-function-paren": 0,
        "no-extra-parens": 0,
        "no-unsafe-negation": ["error"],
        "array-bracket-spacing": ["error", "always"],
        "prefer-const": ["error"],
        "no-undef": ["error"],
        "no-console": ["warn"],
        "no-debugger": ["warn"],
        "eqeqeq": ["error", "smart"],
        "object-curly-spacing": ["error", "always"],
        "semi": ["error", "never"],
        "quotes": ["error", "double"],
        "indent": ["error", 4]
    }
}
