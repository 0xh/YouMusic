{
    "lazy": true,
    "fast": true,
    "disableWarnings": true,
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "module": "system",
        "sourceMap": true,
        "jsx": "react",
        "outDir": "./build",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "app/*": ["./app/*"],
            "server/*": ["./server/*"]
        },
        "types": [
            "jest",
            "reflect-metadata"
        ]
    },
    "awesomeTypescriptLoader": {
        "transpileOnly": true,
        "forkChecker": true,
        "useTranspileModule": true,
        "useBabel": true,
        "useCache": true
    },
    "filesGlob": [
        "!node_modules/**",
        "!db/**",
        "!pseudo/**",
        "!tmp/**",
        "!landing/**",
        "!static/**",
        "!deploy/**"
    ],
    "exclude": [
        "app/native",
        "pseudo",
        "landing",
        "tmp",
        "test",
        "deploy",
        "db",
        "static",
        "node_modules"
    ]
}
