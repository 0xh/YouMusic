{
    "unmockedModulePathPatterns": [
        "node_modules/react/",
        "node_modules/enzyme/"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
        "**/*.{ts,tsx}",
        "!**/node_modules/**",
        "!**/*.d.ts"
    ],
    "coverageDirectory": "./coverage-node",
    "coverageReporters": [
        "lcov",
        "html"
    ],
    "notify": true,
    "transform": {
        "^.+\\.(ts|tsx)$": "<rootDir>/jest.preproc.js"
    },
    "testRegex": "\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "json",
        "js"
    ],
    "moduleDirectories": [
        "node_modules",
        "<rootDir>"
    ]
}
